/* pages/Me/Me.wxss */

page {
  background-color: #fff;
}

.me {
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  position: relative;
}

.me-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.me-info {
  width: 520rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #666;
  line-height: 1.5;
}

.me-title {
  font-size: 16px;
  color: #333;
}

.me-star {
  position: absolute;
  right: 0;
  top: 0;
}

.start-after {
  color: #e2e2e2;
}

.start-before {
  color: #f19e38;
  position: absolute;
  left: 0;
  top: 0;
  width: 80%;
  overflow: hidden;
}
