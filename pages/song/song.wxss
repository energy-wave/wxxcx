/* pages/song/song.wxss */
.item{
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  border: 1rpx solid #ccc;
  margin: 40rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
}
image {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.content {
  width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title {
  margin-bottom: 10rpx;
  font-size: 16px;

}
.author {
  font-size: 14px;
  color: #ccc;
}