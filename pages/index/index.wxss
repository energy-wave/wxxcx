/**index.wxss**/
/* 轮播 */
.slider,
.slider image,
.slider swiper {
  width: 100%;
  height: 390rpx;
}
/* 导航 */
.index-nav {
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item {
  width: 33.33333%;
  height: 200rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 14px; 
}
.index-nav .nav-item:nth-child(3n)::after {
  width: 0;
}
.index-nav image {
  width: 80rpx;
  height: 80rpx;
}
/* 入口 */
.index-enter {
  display: flex;
  padding: 20rpx 25rpx;
}
.index-enter .enter-item {
  width: 50%;
  display: flex;
  justify-content: center;
}
.index-enter image {
  width: 320rpx;
  height: 178rpx;
}
