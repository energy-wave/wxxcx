/**app.wxss**/

page{
  background-color: #fff;
}
.mt20{
  margin-top: 20rpx;
}

.divider {
  height: 20rpx;
  background-color: #f1f1f1;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.1) inset;
}

.bdr{
  position: relative;
}
.bdr::after {
  content: "";
  width: 1rpx;
  height: 100%;
  background-color: #ccc;
  position: absolute;
  right: 0;
  top: 0;
}

/* 箭头 */

.arrow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow::after {
  content: "";
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
  display: block;
}


.cell {
  font-size: 16px;
  background-color: #fff;
}

.cell-item {
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}